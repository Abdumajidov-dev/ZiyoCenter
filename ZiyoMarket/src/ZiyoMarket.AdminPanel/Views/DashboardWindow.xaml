<Window x:Class="ZiyoMarket.AdminPanel.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ZiyoMarket Admin Panel"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource PrimaryHueMidBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource MaterialDesignDivider}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <StackPanel Grid.Row="0" Margin="20" Background="Transparent">
                    <TextBlock Text="ZiyoMarket"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Admin Panel"
                              FontSize="12"
                              Foreground="White"
                              Opacity="0.8"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,20,0,0">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard"
                                                        Width="24"
                                                        Height="24"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <!-- Products -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Command="{Binding NavigateToProductsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ShoppingOutline"
                                                        Width="24"
                                                        Height="24"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Mahsulotlar"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <!-- Orders -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Command="{Binding NavigateToOrdersCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Receipt"
                                                        Width="24"
                                                        Height="24"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Buyurtmalar"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <!-- Users -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Command="{Binding NavigateToUsersCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup"
                                                        Width="24"
                                                        Height="24"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Foydalanuvchilar"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <!-- Support -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Command="{Binding NavigateToSupportCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Headset"
                                                        Width="24"
                                                        Height="24"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Qo'llab-quvvatlash"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="White"
                                  Opacity="0.2"
                                  Margin="20,10"/>

                        <!-- Settings -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Height="50"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Foreground="White"
                                Command="{Binding NavigateToSettingsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Settings"
                                                        Width="24"
                                                        Height="24"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Sozlamalar"
                                          Margin="15,0,0,0"
                                          VerticalAlignment="Center"
                                          FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Logout Button -->
                <Button Grid.Row="2"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Height="50"
                        HorizontalContentAlignment="Left"
                        Padding="20,0"
                        Foreground="White"
                        Margin="0,0,0,10"
                        Command="{Binding LogoutCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout"
                                                Width="24"
                                                Height="24"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Chiqish"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="14"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    Padding="20">
                <Grid>
                    <TextBlock Text="{Binding CurrentPage}"
                              FontSize="20"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Account"
                                                Width="24"
                                                Height="24"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0"/>
                        <TextBlock Text="Admin"
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1">
                <!-- Dynamic Content View -->
                <ContentControl Content="{Binding CurrentView}"
                               Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}}"/>

                <!-- Default Dashboard -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             Padding="20"
                             Visibility="{Binding CurrentView, Converter={StaticResource InverseNullToVisibilityConverter}}">
                    <StackPanel>
                    <!-- Stats Cards -->
                    <TextBlock Text="Asosiy statistika"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Products -->
                        <materialDesign:Card Grid.Column="0"
                                            Margin="0,0,10,0"
                                            Padding="20">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="ShoppingOutline"
                                                        Width="40"
                                                        Height="40"
                                                        Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="1,234"
                                          FontSize="28"
                                          FontWeight="Bold"
                                          Margin="0,10,0,5"/>
                                <TextBlock Text="Jami mahsulotlar"
                                          FontSize="12"
                                          Foreground="Gray"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Total Orders -->
                        <materialDesign:Card Grid.Column="1"
                                            Margin="5,0"
                                            Padding="20">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="Receipt"
                                                        Width="40"
                                                        Height="40"
                                                        Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                                <TextBlock Text="5,678"
                                          FontSize="28"
                                          FontWeight="Bold"
                                          Margin="0,10,0,5"/>
                                <TextBlock Text="Jami buyurtmalar"
                                          FontSize="12"
                                          Foreground="Gray"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Total Users -->
                        <materialDesign:Card Grid.Column="2"
                                            Margin="5,0"
                                            Padding="20">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="AccountGroup"
                                                        Width="40"
                                                        Height="40"
                                                        Foreground="Green"/>
                                <TextBlock Text="3,456"
                                          FontSize="28"
                                          FontWeight="Bold"
                                          Margin="0,10,0,5"/>
                                <TextBlock Text="Jami foydalanuvchilar"
                                          FontSize="12"
                                          Foreground="Gray"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Revenue -->
                        <materialDesign:Card Grid.Column="3"
                                            Margin="10,0,0,0"
                                            Padding="20">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="CurrencyUsd"
                                                        Width="40"
                                                        Height="40"
                                                        Foreground="Orange"/>
                                <TextBlock Text="$45,678"
                                          FontSize="28"
                                          FontWeight="Bold"
                                          Margin="0,10,0,5"/>
                                <TextBlock Text="Jami daromad"
                                          FontSize="12"
                                          Foreground="Gray"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>

                    <!-- Recent Orders -->
                    <TextBlock Text="Oxirgi buyurtmalar"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,40,0,20"/>

                    <materialDesign:Card Padding="0">
                        <DataGrid AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 HeadersVisibility="Column"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="80" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Mijoz" Width="*" Binding="{Binding Customer}"/>
                                <DataGridTextColumn Header="Summa" Width="150" Binding="{Binding Amount}"/>
                                <DataGridTextColumn Header="Status" Width="150" Binding="{Binding Status}"/>
                                <DataGridTextColumn Header="Sana" Width="200" Binding="{Binding Date}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
